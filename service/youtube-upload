#Copy files for concatenation to /media/hdd/youtube-upload
sudo apt-get install -y libav-tools
clear
cd /media/hdd/youtube-upload/
if [ ! -f youtube.avi ] ; then
  #https://trac.ffmpeg.org/wiki/Concatenate
  find *.MP4 -type f | sort | while read FILE ; do
    avconv -y -i $FILE -c copy -bsf:v h264_mp4toannexb -f mpegts $FILE.ts
  done
  avconv -y -i concat:"`ls *.MP4.ts | sort | tr '\n' '|'| head -c -1`" -c copy -bsf:a pcm_s16le youtube.avi
fi
youtube-upload --title="Video" --category="Entertainment" --privacy="private" --location="=" youtube.avi
pushbullet push all note "Concatenated & Uploaded to Youtube"
