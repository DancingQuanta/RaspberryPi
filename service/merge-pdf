#!/bin/sh
clear
cd ./gdrive
drive pull -quiet Pending
#drive pull --quiet --starred --all
if grep -r "Encrypt" /home/pi/gdrive/Pending ; then pushbullet push all note "Merge PDF" "ERROR CRYPTED FILE"; exit; fi
find /home/pi/gdrive -iname "*.pdf" -type f | sort | tr '\n' ',' > files.csv
if [ -f files.csv ] ; then /usr/local/sejda/bin/sejda-console merge -l files.csv -o sejda_out.pdf ; fi
