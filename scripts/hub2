#!/bin/sh
# Create .mqtt files with
#echo '/a/<API_ID>/p/<PROJECT>/d/<UUID>/#' | tee ~/.mqtt

mosquitto_sub -h mqtt.devicehub.net -p 1883 -t "`cat ~/.mqtt`" -R | while read val; do
a=`echo "$val" |  jq '.["value"]' -r`.

echo "sdfssfsfsf------> $a"
pushbullet push all note "Mosquitto" "hjd"
done
