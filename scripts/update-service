#!/bin/sh
clear
rm  ~/service.zip
curl -o ~/.config/mc/menu https://raw.githubusercontent.com/ManuCart/ServicePi/master/menu
rm ~/service/* 
curl -L -o service.zip https://github.com/ManuCart/ServicePi/archive/master.zip
unzip -jo service.zip -d /home/pi/service ServicePi-master/service/*
chmod +x ~/service/*
ln -s /media/hdd/Biblioth√®ques/Soundtracks/ ~/service/play-scores
ln -s /media/hdd/torrent/ ~/service/torrents
ln -s /media/hdd/ ~/service/hdd
ln -s /media/hdd/Drive/ ~/service/drive
ln -s /media/freebox/ ~/service/freebox
pushbullet delete all
