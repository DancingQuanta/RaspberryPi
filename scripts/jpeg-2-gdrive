#!/bin/sh
clear

rm -rf /media/hdd/Drive/*
cd /media/hdd/Drive
drive pull --quiet --starred --all

find /media/hdd/Drive/Photos -iname "*.jpg" -type f | sort | while read FILE ; do 
NEWDATE=`echo "$(dirname "$FILE")" | rev | cut -d '/' -f 1 | rev | cut -d ' ' -f  1 | tr '-' ':'`
exiv2 -M "add Exif.Photo.DateTimeOriginal $NEWDATE 00:00:00" "$FILE"
done


#rsync -a --ignore-existing --remove-source-files --progress /media/hdd/Drive/photos/ /media/hdd/photos
#pushbullet push all note "Raspberry Pi" "Done"
read null
