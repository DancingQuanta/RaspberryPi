+ f *.mp3 | f *.MP3 | f *.mp4 | f *.MP4 | f *.avi | f *.AVI | f *.mkv | f *.MKV & t r
c castnow
  clear
  echo "%d/%f"
  nodejs /usr/local/bin/castnow --tomp4 "%f"

+ f * & t t
A Encrypt
  gpg2 --encrypt "%f"

+ f * & t t
A move to "BitTorrentSync" folder
  set %t
  while [ -n "$1" ] ; do
    mv "$1" "/media/hdd/BitTorrentSync/$(basename "$1")"
    shift
  done
  
+ f * & t t
D Delete
  set %t
  while [ -n "$1" ] ; do
    rm -rf "$1"
    shift
  done

